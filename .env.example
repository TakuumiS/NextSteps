# Database Configuration
# Format: postgresql://<username>:<password>@localhost/<dbname>
DATABASE_URL=postgresql://user:password@localhost/nextsteps

# Google Cloud Console Credentials
# Get these from https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# For local development: http://localhost:8000/auth/callback
# For production: https://<YOUR-BACKEND-URL>/auth/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Google Gemini API Key
# Get this from https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key

# Frontend Configuration
# URL where the frontend is running (for CORS)
FRONTEND_URL=http://localhost:5173

# Backend Configuration
# URL where this backend is running (used for dynamic callback URLs on Render)
RENDER_EXTERNAL_URL=https://your-backend.onrender.com

# Optional
SECRET_KEY=your-secret-key
